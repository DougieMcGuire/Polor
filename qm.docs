  constructor(roomId) {
    this.roomId = roomId;
    this.players = new Map();
    this.scores = new Map();
  }
  
  addPlayer(playerId, playerName) {
    const quiz = new QuizModule({
      playerId: playerId,
      requiredCorrect: 3
    });
    
